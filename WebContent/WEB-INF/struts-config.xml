<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
          
<struts-config>
    <form-beans>
    
        <form-bean name="SaveInsertUserForm" 
            type="org.apache.struts.validator.DynaValidatorForm" >
            <form-property name="idUsuario" type="java.lang.String" />
            <form-property name="nome" type="java.lang.String" />
            <form-property name="email" type="java.lang.String" />
            <form-property name="senha" type="java.lang.String" />
            <form-property name="csenha" type="java.lang.String" />
            <form-property name="dataValidadeCNH" type="java.lang.String" />
        </form-bean>
    
        <form-bean name="SaveEditUserForm" type="strutsdemo.form.SaveEditUserForm"/>
    </form-beans>
    
    <global-forwards>        
        <!-- Default forward to "Welcome" action -->
        <!-- Demonstrates using index.jsp to forward -->
        <forward name="welcome" path="/Welcome.do" />    
        <forward name="failure" path="/Failure.do" />
    </global-forwards>
    
    
    <action-mappings> 
    	<action path="/Welcome" forward="/pages/welcome.jsp" />
        <action path="/Failure" forward="/pages/error.jsp" />
       
    	<action
            path="/ListUsers"
            type="strutsdemo.action.ListUsersAction">
            <forward name="success" path="/pages/listUsers.jsp" />
        </action>
        
        <action 
        	path="/EditUser" 
            type="strutsdemo.action.EditUserAction">
            <forward name="success" path="/pages/editUser.jsp" /> 
        </action>
        
        <action  
        	path="/SaveEditUser" 
            type="strutsdemo.action.SaveEditUserAction" 
            name="SaveEditUserForm" input="/pages/editUser.jsp" > 
            <forward name="success" path="/ListUsers.do" />
            <forward name="failure" path="/Failure.do" />
        </action>   
        
        <action 
        	path="/InsertUser" 
        	type="strutsdemo.action.InsertUserAction">
            <forward name="success" path="/pages/insertUser.jsp" /> 
        </action>      
        
        <action 
        	path="/DeleteUser" type="strutsdemo.action.DeleteUserAction">
            <forward name="success"  path="/pages/listUsers.jsp"/> 
        </action>
                        
        <action  
        	path="/SaveInsertUser" 
            type="strutsdemo.action.SaveInsertUserAction" 
            name="SaveInsertUserForm" input="/pages/insertUser.jsp" > 
            <forward name="success" path="/ListUsers.do" />
            <forward name="failure" path="/pages/insertUser.jsp" />
        </action>        
               
    </action-mappings>
    
        <form-bean name="SaveInsertCarForm" 
            type="org.apache.struts.validator.DynaValidatorForm" >
            <form-property name="idVeiculo" type="java.lang.String" />
            <form-property name="marca" type="java.lang.String" />
            <form-property name="modelo" type="java.lang.String" />
            <form-property name="ano" type="java.lang.String" />
            <form-property name="numportas" type="java.lang.String" />
            <form-property name="placaveiculo" type="java.lang.String" />
        </form-bean>
    
        <form-bean name="SaveEditCarForm" type="strutsdemo.form.SaveEditCarForm"/>
    </form-beans>
    
    <global-forwards>        
        <!-- Default forward to "Welcome" action -->
        <!-- Demonstrates using index.jsp to forward -->
        <forward name="welcome" path="/Welcome.do" />    
        <forward name="failure" path="/Failure.do" />
    </global-forwards>
    
    
    <action-mappings> 
    	<action path="/Welcome" forward="/pages/welcome.jsp" />
        <action path="/Failure" forward="/pages/error.jsp" />
       
    	<action
            path="/ListCars"
            type="strutsdemo.action.ListCarsAction">
            <forward name="success" path="/pages/listCars.jsp" />
        </action>
        
        <action 
        	path="/EditCar" 
            type="strutsdemo.action.EditCarAction">
            <forward name="success" path="/pages/editCar.jsp" /> 
        </action>
        
        <action  
        	path="/SaveEditCar" 
            type="strutsdemo.action.SaveEditCarAction" 
            name="SaveEditCarForm" input="/pages/editCar.jsp" > 
            <forward name="success" path="/ListCars.do" />
            <forward name="failure" path="/Failure.do" />
        </action>   
        
        <action 
        	path="/InsertCar" 
        	type="strutsdemo.action.InsertCarAction">
            <forward name="success" path="/pages/insertCar.jsp" /> 
        </action>      
        
        <action 
        	path="/DeleteCar" type="strutsdemo.action.DeleteCarAction">
            <forward name="success"  path="/pages/listCars.jsp"/> 
        </action>
                        
        <action  
        	path="/SaveInsertCar" 
            type="strutsdemo.action.SaveInsertCarAction" 
            name="SaveInsertCarForm" input="/pages/insertCar.jsp" > 
            <forward name="success" path="/ListCars.do" />
            <forward name="failure" path="/pages/insertCar.jsp" />
        </action>        
               
    </action-mappings>
    
    <message-resources parameter="strutsdemo.MessageResources" />
    
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
    	<set-property value="/org/apache/struts/validator/validator-rules.xml,/WEB-INF/validation.xml" property="pathnames"/>
    </plug-in>
    
</struts-config>          